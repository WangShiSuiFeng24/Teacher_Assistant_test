<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/stu_id"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_weight="1"
        android:textSize="15sp"
        android:background="@null"
        android:hint="@null" />

    <TextView
        android:id="@+id/stu_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/stu_gender"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_weight="1" />

    <EditText
        android:id="@+id/stu_score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_weight="1.5"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textSize="15sp"
        android:background="@null"
        android:hint="@string/there_is_no"
        android:inputType="text"
        android:singleLine="true"
        android:maxLength="8"
        android:digits="0123456789+-*/" />

    <TextView
        android:id="@+id/stu_total_score"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_weight="1.2" />

    <ImageView
        android:id="@+id/stu_correct"
        android:src="@drawable/ic_dark_star"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:layout_weight="1"
        android:contentDescription="@null" />

    <ImageView
        android:id="@+id/stu_check_box"
        android:src="@mipmap/ic_uncheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:visibility="gone"
        android:contentDescription="@null"/>

</LinearLayout>